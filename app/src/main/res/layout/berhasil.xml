<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F9D4"
    tools:context=".BerhasilActivity">

    <View
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#A6FF00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat anda\nberhasil!"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_kembali"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Kembali"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="#A6FF00"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/text_success_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#A6FF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>